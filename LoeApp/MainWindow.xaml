<Window x:Class="LoeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoeApp"
        xmlns:controls="clr-namespace:LoeApp.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Window.Resources>
        <Style TargetType="Label" x:Key="StateTimeStyle">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="FontSize" Value="16" />
        </Style>
    </Window.Resources>

    <StackPanel Orientation="Vertical">
        <controls:ElectricityStateControl
            x:Name="CurrentStateControl"
            VerticalAlignment="Top"
            Height="50"
            HorizontalAlignment="Stretch" />

        <controls:ElectricityStateControl
            x:Name="NextStateControl"
            VerticalAlignment="Top"
            Height="50"
            HorizontalAlignment="Stretch" />
    </StackPanel>
</Window>
